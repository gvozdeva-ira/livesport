{
  "name": "livesport",
  "type": "module",
  "devDependencies": {
    "@wdio/allure-reporter": "^8.34.0",
    "@wdio/appium-service": "^8.35.1",
    "@wdio/cli": "^8.35.1",
    "@wdio/local-runner": "^8.35.1",
    "@wdio/mocha-framework": "^8.35.0",
    "@wdio/spec-reporter": "^8.32.4",
    "allure-commandline": "^2.27.0",
    "appium": "^2.5.1",
    "appium-uiautomator2-driver": "^2.2.0",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.ts",
    "test:report_ios": "allure generate allure-results-ios --clean -o allure-report-ios",
    "test:report_android": "allure generate allure-results-android --clean -o allure-report-android",
    "test:report_ios:open": "yarn test:report_ios && allure open allure-report-ios",
    "test:report_android:open": "yarn test:report_android && allure open allure-report-android"
  }
}
